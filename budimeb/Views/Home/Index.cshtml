@{
    ViewData["Title"] = "Home Page";
}
<head>
    <style>
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 10vmin;
            overflow: hidden;
            transform: skew(5deg);
        }

        .card {
            flex: 1;
            transition: all 1s ease-in-out;
            height: 75vmin;
            position: relative;
        }

        .card__description {
            color: black;
            background: rgba(255, 255, 255, 0.3);
            padding: 0.5em;
            position: absolute;
            bottom: 2.5em;
            left: 0;
            width: 100%;
            text-align: center;
            font-size: 0.75em;
            white-space: normal;
            opacity: 0; /* Ukryj opis domyślnie */
            transition: opacity 0.5s ease-in-out;
        }

        .card__head {
            color: black;
            background: rgba(255, 30, 173, 0.75);
            padding: 0.5em;
            text-align: center;
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            font-size: 1em;
            white-space: nowrap;
            transition: all 0.5s ease-in-out;
        }

        .card__edit {
            position: absolute;
            bottom: 0.5em;
            right: 0.5em;
            color: black;
            background: rgba(255, 255, 255, 0.75);
            padding: 0.5em;
            border-radius: 50%;
            cursor: pointer;
            transition: background 0.3s ease-in-out;
        }

            .card__edit:hover {
                background: rgba(255, 255, 255, 1);
            }

        .card:hover {
            flex-grow: 10;
        }

            .card:hover img {
                filter: grayscale(0);
            }

            .card:hover .card__head {
                background: rgba(0, 0, 0, 0.5);
                color: white;
                font-size: 1.5em;
            }

            .card:hover .card__description {
                opacity: 1; /* Pokaż opis po najechaniu */
                bottom: 5rem; /* Przesuń opis wyżej */
            }

        .card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: all 1s ease-in-out;
            filter: grayscale(100%);
        }

        .card:not(:nth-child(5)) {
            margin-right: 1em;
        }
    </style>
    <!-- Dodanie FontAwesome -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<div class="container">
    @foreach (var cat in ViewBag.Categories)
    {
        <div class="card">
            <img src="@cat.PhotoPath">
            <div class="card__description">@cat.Description</div>
            <div class="card__head">
                @cat.Name
                <a href="/Home/EditCategory/@cat.Id" class="card__edit">
                    <i class="fas fa-pencil-alt"></i>
                </a>
            </div>
        </div>
    }
</div>
