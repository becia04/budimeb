        @RenderSection("Scripts", false)
    </div>


    <div style="margin-top:4rem; margin-bottom:20px;font-family: 'Josefin Sans', sans-serif;">
        <div class="underline" style="height: 4.5px; margin-bottom:2rem; width: calc(100% - 4rem); margin-left: 4rem;"></div>
        <div style="display: flex; justify-content: space-between; margin-left:4rem; margin-right:4rem;">
            <div style="width: 40%;">
                <h5><b>BUDIMEB</b></h5>
                <p> </p>
                <li><a style="text-decoration:none" href="@Url.Action("About", "Home")">O nas</a></li>
                <li><a style="text-decoration:none" href="@Url.Action("Contact", "Home")">Kontakt</a></li>
                <p></p>
                <p>
                    
                    Klemensa Janickiego 29, 71-899 Szczecin<br>
                    tel. +48 698 395 186<br>
                    
                    e-mail: info@budimeb.pl<br>
                    fax. +48 91 8206256
                </p>
            </div>
            @await Component.InvokeAsync("Category")
            <div style="width: 20%;">
                </div>
        </div>
        <div style="margin-left: 4rem; margin-right: 4rem; display: flex; justify-content: space-between; align-items: center;">
            <div style="flex: 1; text-align: left;">
                <a href="@Url.Action("ChangeLanguage", "Home", new { lang = "pl" })">PL</a> &bull;
                <a href="@Url.Action("ChangeLanguage", "Home", new { lang = "en" })">ENG</a> &bull;
                <a href="@Url.Action("ChangeLanguage", "Home", new { lang = "de" })">DE</a>
            </div>
            <div style="flex: 1; text-align: center;">
                <p style="margin: 0;">&copy; @DateTime.Now.Year - BUDIMEB</p>
            </div>
            <div style="flex: 1;"></div>
        </div>
    </div>


</body>
</html>

<script>
    // Funkcja wywoływana po kliknięciu na obrazek
    function showEnlargedImageSolo(imageSrc) {
        // Tworzenie kontenera obrazka powiększonego
        var enlargedImageContainer = document.createElement("div");
        enlargedImageContainer.classList.add("enlarged-image-container-solo");

        // Tworzenie obrazka
        var enlargedImage = document.createElement("img");
        enlargedImage.src = imageSrc;
        enlargedImage.classList.add("enlarged-image-solo");

        // Dodanie obrazka do kontenera
        enlargedImageContainer.appendChild(enlargedImage);

        // Dodanie kontenera do body strony
        document.body.appendChild(enlargedImageContainer);

        // Obsługa kliknięcia poza obrazkiem, aby go ukryć
        enlargedImageContainer.onclick = function () {
            document.body.removeChild(enlargedImageContainer);
        };
    }
</script>
